<functions>
    <function>
        <feel>contains\((".*"),(".*")\)</feel>
        <opa>Contains($1;$2)</opa>
    </function>
    <function>
        <feel>lower case\((".*")\)</feel>
        <opa>Lower($1)</opa>
    </function>
    <function>
        <feel>upper case\((".*")\)</feel>
        <opa>Upper($1)</opa>
    </function>
    <function>
        <feel>starts with\((".*"),(".*")\)</feel>
        <opa>StartsWith($1;$2)</opa>
    </function>
    <function>
        <feel>ends with\((".*"),(".*")\)</feel>
        <opa>EndsWith($1;$2)</opa>
    </function>
    <function>
        <feel>string\((".*")\)</feel>
        <opa>Text($1)</opa>
    </function>
    <function>
        <feel>string length\((".*")\)</feel>
        <opa>Length($1)</opa>
    </function>
    <function>
        <feel>substring\((".*"),(\d*),(\d*)\)</feel>
        <opa>Substring($1;$2;$3)</opa>
    </function>
    <function>
        <feel>date\(("[12]\d{3}-(?:0[1-9]|1[0-2])-(?:0[1-9]|[12]\d|3[01])")\)</feel>
        <opa>Date($1)</opa>
    </function>
    <function>
        <feel>date\(([12]\d{3}),(\d{2}),(\d{2})\)</feel>
        <opa>Date($1;$2;$3)</opa>
    </function>
    <function>
        <feel>([12]\d{3}-(?:0[1-9]|1[0-2])-(?:0[1-9]|[12]\d|3[01]))\s?([+-])\s?[P](\d\d?)[D]</feel>
        <opa>AddDays($1;$2)</opa>
    </function>
    <function>
        <feel>([12]\d{3}-(?:0[1-9]|1[0-2])-(?:0[1-9]|[12]\d|3[01]))\s?([+-])\s?[P](\d\d?)[M]</feel>
        <opa>AddMonths($1;$2)</opa>
    </function>
    <function>
        <feel>([12]\d{3}-(?:0[1-9]|1[0-2])-(?:0[1-9]|[12]\d|3[01]))\s?([+-])\s?[P](\d\d?)[Y]</feel>
        <opa>AddYears($1;$2)</opa>
    </function>
</functions>

